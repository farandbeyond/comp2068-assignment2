<% include partials/header.ejs %>
<h1><%= title %></h1>

<table class="projectList">
    <tr class="columnHeads">
        <th>Project Title</th>
        <th>Project Language</th>
        <th>Project Description</th>
        <th>Team Members</th>
        <th>Starting Date</th>
        <th>Current Active Project</th>
        <th>Project Finished</th>
        <th>Edit Entry</th>
        <th>Remove Entry</th>
    </tr>
    <% for (var i=0; i < projects.length; i++) { %>
    <tr>
        <td><%= projects[i].title %></td>
        <td><%= projects[i].language %></td>
        <td><%= projects[i].description %></td>
        <td><%= projects[i].team %></td>
        <td><%= projects[i].startdate %></td>
        <td><%= projects[i].active %></td>
        <td><%= projects[i].completed %></td>
        <td><button onclick="location.href='/projects/<%= projects[i]._id %>'">Edit <%= projects[i].title %> </button></td>
        <td><button onclick="location.href='/projects/delete/<%= projects[i]._id %>'">Delete <%= projects[i].title %></button></td>
    </tr>
    <% } %>
</table>
<button onclick="location.href='/projects/add'">Add Project</button>
